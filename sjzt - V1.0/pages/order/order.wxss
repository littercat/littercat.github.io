 .inputnum{
   text-align: center;
   font-size: 14px;
   margin:20px auto;
   border:1px solid #ccc;
   position:absolute;
   left:10%;
   bottom:40px;
   z-index:100;
   width:80%;
   background: #fff;
 } 
 .inputnum view:first-child{
   padding:6px 0; 
 }
 .inputnum  input{
   padding:6px;
   margin:10px 30px;
   border:1px solid #ccc;
 }
 .clickbutton{
   display: flex;
   border-top:1px solid #ccc;
 }
 .clickbutton view{
   width:50%;
   text-align: center;
   padding:8px 0;
 }
