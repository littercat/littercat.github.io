}
.submitorder{
    color:#fff;
    background: #ff0000;
    padding:10px 30px;
    width:70%;
    margin-left:7.5%;
    margin-top:30px;
    text-align: center;
    margin-bottom:20px;
}
.caret {
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: 2px;
    vertical-align: middle;
    border-top: 5px solid #000;
    border-right: 5px solid transparent;
    border-left: 5px solid transparent;
}
/*商品加入购物车*/
.bg{
  position:fixed;
  right:0;
  top:0;
  background:rgba(0,0,0,.75);
  width:100%;
  height:100%;
  z-index:200;
}
.select{
  position: relative
}
.select .ge {
  position: absolute;
  right: 0;
  top: -5px;
  padding: 0 5px;
  height: 20px;
  border-radius: 20%;
  background: yellow;
  line-height: 20px;
  font-size: 14px;
  font-weight: normal;
}

.message-right{
  position:fixed;
  right:0;
  bottom:0;
  width:100%;
  background:#fff;
  z-index:200;
  font-size:16px;
  min-height:70%;
}
.message{
  display: flex;
}
.message .goods-img{
  margin:10px;
}
.message .goods-img image{
  width:100px;
  height:100px;
  border:1px solid #333;
}
.message .goods-info{
  margin-top:10px;
  flex:1;
}
.message .num{
  margin:20px 0;
}
.message .goods-price{
  display: flex;
  width:100%
}
.message .goods-price .price{
  flex:1;
}
.message .goods-price .stock{
  margin:0;
  margin-right:10px;
}
.message-right .option{
  display: flex;
  padding:10px;
}
.message-right .total{
  flex:1;
}
.message-right button{
  height:24px;
  width:24px;
  line-height: 24px;
  text-align: center;
  margin-right:10px;
  padding-left:0;
  padding-right:0;
}

