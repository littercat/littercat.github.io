}
.each_order .order-info{
    display: flex;
    border-bottom:1px solid #ccc;
    margin-left:20px;
    color:#666;
}
.each_order .order-info image{
    width:60px;
    height:60px;
    margin:0 5px;
}
.order-info{
    padding:10px 0;
}
.order-title{
    font-size:16px;
