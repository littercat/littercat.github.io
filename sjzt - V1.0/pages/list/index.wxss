.container {
}

.h-content {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background: #fff;
  border: 1px solid #ccc;
  z-index: 100;
}

.head {
  display: flex;
  height: 30px;
  padding: 8px 0;
}

.head view {
  width: 25%;
  text-align: center;
  font-size: 16px;
  height: 30px;
  line-height: 30px;
  position: relative;
}

.h-content .last_content {
  position: absolute;
  bottom: -135px;
  left: 0;
  z-index: 200;
  width: 100%;
  background: #fff;
  text-align: center;
  font-size: 14px;
  color: #666;
}

.h-content .second {
  position: absolute;
  bottom: -190px;
  left: 0;
  z-index: 200;
  width: 100%;
  background: #fff;
  text-align: center;
  font-size: 14px;
  color: #666;
}

.h-content .last .lastview {
  padding: 0 10px;
}

.h-content .last .lastview view {
  padding: 8px 0;
}

.h-content  .other .lastview {
  border-bottom: 1px solid #ccc;
  text-align: left;
  padding: 0 10px;
}

.h-content .more {
  padding: 5px 0;
}

.h-content  .other .label {
  padding: 0 20px;
  font-size: 12px;
  color: #999;
  text-align: left;
  /*border-bottom:1px solid #ccc;*/
}

.sure {
  display: flex;
}

.sure view {
  width: 50%;
  text-align: center;
  padding: 10px 0;
}

.sure view:last-child {
  background: #f44638;
  color: #fff;
}

.active {
  color: #f44638;
}

.item {
  padding: 8px;
