/*商品加入购物车*/

.bg {
  position: fixed;
  right: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.75);
  width: 100%;
  height: 100%;
  z-index: 200;
}

.message-right {
  position: fixed;
  right: 0;
  top: 0;
  width: 80%;
  background: #fff;
  z-index: 200;
  font-size: 14px;
  height: 100%;
}

.message {
  display: flex;
}

.message .goods-img {
  margin: 10px;
}

.message .goods-img image {
  width: 100px;
  height: 100px;
  border: 1px solid #333;
}

.message .goods-info {
  margin-top: 10px;
  flex: 1;
}

.message .num {
  margin: 20px 0;
}

.select {
  position: relative;
}

.select .ge {
  position: absolute;
  right: 0;
  top: -5px;
  padding: 0 5px;
  height: 20px;
  border-radius: 20%;
  background: yellow;
  line-height: 20px;
  font-size: 14px;
  font-weight: normal;
}

.message .goods-price {
  display: flex;
  width: 100%;
}

.message .goods-price .price {
  flex: 1;
}

.message .goods-price .stock {
  margin: 0;
  margin-right: 10px;
}

.message-right .option {
  display: flex;
  padding: 10px;
}

.message-right .total {
  flex: 1;
}

.message-right button {
  height: 24px;
  width: 28px;
  line-height: 24px;
  text-align: center;
  margin-right: 5px;
  padding-left: 0;
  padding-right: 0;
}

