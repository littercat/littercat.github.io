/*商品加入购物车*/
.bg{
  position:fixed;
  right:0;
  top:0;
  background:rgba(0,0,0,.75);
  width:100%;
  height:100%;
  z-index:20;
}


.message-right{
  position:fixed;
  right:0;
  bottom:0;
  width:100%;
  background:#fff;
  z-index:20;
  font-size:16px;
  min-height:70%;
}
.message{
  display: flex;
}
.message .goods-img{
  margin:10px;
}
.message .goods-img image{
  width:100px;
  height:100px;
  border:1px solid #333;
}
.message .goods-info{
  margin-top:10px;
  flex:1;
}
.message .num{
  margin:20px 0;
}
.message .goods-price{
  display: flex;
  width:100%
}
.message .goods-price .price{
  flex:1;
}
.message .goods-price .stock{
  margin:0;
  margin-right:10px;
}
.message-right .option{
  display: flex;
  padding:10px;
}
.message-right .total{
  flex:1;
}
.message-right button{
  height:24px;
  width:24px;
  line-height: 24px;
  text-align: center;
  margin-right:10px;
  padding-left:0;
  padding-right:0;
}

