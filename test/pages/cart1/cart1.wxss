
/*空的购物车*/
.container {
  display: flex;
  height: 100%;
  align-items: center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  background-color: #F2f2f2;
  color: #939393;
}
.container .cart-image {
  width: 120px;
  height: 120px;
}
/*有商品的购物车*/
.cart-content{
  display: flex;
  background: #fff;
  width:100%;
  margin-top:10px;
  border:1px solid #ccc;
  padding:10px 10px;
}
.cart-content .select{
  width:16px;
  height:16px;
  line-height: 80px;
}

.cart-content .goodsimg{
  width:80px;
  height:80px;
  border:1px solid #ccc;
}

.cart-content .goods-center{
  padding:0 10px;
}
.goods-info{
  flex:1;
  font-size:14px;
}
.cart-content .goods-title{
  height:30px;
}
.cart-content .price{
  display: flex;
  margin-top:35px;
}
.cart-content .total{
  flex:1;
}
.cart-content .many{
  float:right;
  margin-right: 25px;
}
/*底部按钮*/
.carts-footer {
  position:fixed;
  bottom:0;
  left:0;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #fff;
}
 
/*复选框*/
.carts-footer icon {
  margin-left: 20rpx;
  margin-top:12px;
}
 
/*全选字样*/
.carts-footer text {
  font-size: 30rpx;
  margin-left: 8rpx;
  line-height: 10rpx;
  margin-top:-4px;
}
 
/*立即结算按钮*/
.carts-footer .button {
  line-height: 80rpx;
  text-align: center;
  width:220rpx;
  height: 80rpx;
  background-color: #f60;
  color: white;
  font-size: 36rpx;
  border-radius: 0;
  border: 0;
}
/*商品加入购物车*/
