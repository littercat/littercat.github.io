.container {
  padding: 8px 0;
}

.item {
  padding: 8px;
  background-color: #fff;
  border-top: 1px solid #e4e4e4;
  color: #787878;
}

.item image {
  display: block;
  width: 129px;
  height: 114px;
}

.item-right {
  margin-left: 20px;
}

.stock {
  margin: 15px 0;
}

.title text {
  font-size: 16px;
  color: #787878;
}

text {
  font-size: 15px;
  color: #444;
}

.c-1 {
  color: #09bb07;
}

.cart-img {
  display: flex;
  display: -webkit-flex;
}

.item-right text {
  flex: 1;
}

.item-right image {
  width: 18px;
  height: 18px;
}

/*商品加入购物车*/

.bg {
  position: fixed;
  right: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.75);
  width: 100%;
  height: 100%;
  z-index: 20;
}

.message-right {
  position: fixed;
  right: 0;
  top: 0;
  width: 80%;
  background: #fff;
  z-index: 20;
  font-size: 16px;
  height: 100%;
}

.message {
  display: flex;
}

.message .goods-img {
  margin: 10px;
}

.message .goods-img image {
  width: 100px;
  height: 100px;
  border: 1px solid #333;
}

.message .goods-info {
  margin-top: 10px;
  flex: 1;
}

.message .num {
  margin: 20px 0;
}

.message .goods-price {
  display: flex;
  width: 100%;
}

.message .goods-price .price {
  flex: 1;
}

.message .goods-price .stock {
  margin: 0;
  margin-right: 10px;
}

.message-right .option {
  display: flex;
  padding: 10px;
}

.message-right .total {
  flex: 1;
}

.message-right button {
  height: 24px;
  width: 24px;
  line-height: 24px;
  text-align: center;
  margin-right: 10px;
  padding-left: 0;
  padding-right: 0;
}

.nav {
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  border-top: 1px solid #333;
  border-bottom: 1px solid #333;
  background: #ccc;
}

.bc_white view {
  padding: 0 8px;
  background: #ccc;
}

.default {
  line-height: 40px;
  text-align: center;
  color: #000;
  font-weight: bold;
  font-size: 14px;
}

.bg-color {
  line-height: 40px;
  text-align: center;
  font-weight: bold;
  font-size: 14px;
  color: red;
}

.show {
  display: block;
  text-align: center;
  line-height: px;
}

.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
}

.attri {
  display: flex;
}

.attri view {
  width: 25%;
  text-align: center;
  padding: 5px 0;
  color: #aaa;
}

.price-info {
  display: flex;
}

.price-info view {
  width: 25%;
  padding: 10px 0;
}

.goods-num {
  display: flex;
}

.goods-num text {
  line-height: 24px;
}

.goods-num .add {
  margin-left: 10px;
}

.footer {
  display: flex;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #ccc;
}

.footer view {
  width: 50%;
  text-align: center;
  padding: 10px;
}

.footer .addcart {
  background: #f44638;
  color: #fff;
}

.showModalStatus {
  display: block;
}
