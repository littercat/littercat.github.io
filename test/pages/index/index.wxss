}
/*搜索*/
.search{
  display: flex;
  padding:10px;
  background: #fff;
  font-size:14px;
  background: #fff;
}
.search input{
  flex:1;
  border:1px solid #ccc;
  padding:5px 0;
   padding-left:10px;
}
.search text{
  border:1px solid #ccc;
  border-left:none;
  padding:5px 20px;
  padding-top:9px;
}
/*轮播*/
.swiper_box {
  /*width: 100%;*/
  height: 187.5px;
}
swiper.swiper {
  height: 100%;
}
.swiper-item {
    display: block;
    height: 100%;
}
.slide-image {
  height: 100%;
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

/*分类*/
.index-nav {
  height: 80px;
  /*background: red;*/
  display: flex;
  flex-direction: row;
  /*align-items: center;*/
  background-color: #fff;
  color: #646464;
}
.index-nav view {
  flex: 1;
  flex-direction: column;
  border-right: 1px solid #F2f2f2;
}
.index-nav image {
  width: 38px;
  height: 38px;
}
.index-nav text {
  font-size: 14px;
  margin-top:8px;
}


view.text {
  display: flex;
  align-items: center;
  position: relative;
  padding: 10px 10px 10px 12px;
  font-size: 15px;
  color: #656565;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}
.line_y {
  width: 3px;
  height: 100%;
  height: 18px;
  display: inline-block;
  background-color: #09bb07;
}
view.text text {
  margin-left: 10px;
  line-height: 18px;
}

.item {
  /*margin-bottom: 7px;*/
  height: 126px;
}
/*本店推荐*/
.item {
  padding: 8px;
  background-color: #fff;
  border-top: 1px solid #e4e4e4;
  color: #787878;
}

.item image {
  display: block;
  width: 129px;
  height: 114px;
}

.item-right {
  margin-left: 20px;
}


.stock{
  margin:15px 0;
}
.title text {
  font-size: 16px;
  color: #787878;
}

text {
  font-size: 15px;
  color: #444;
}
.c-1 {
  color: #09bb07;
}
.cart-img {
  display: flex;
  display: -webkit-flex;
}

.item-right text{
  flex: 1;
}

.item-right image{
  width:18px;
  height:18px;
}

/*商品加入购物车*/
.bg{
   position:fixed;
  right:0;
  top:0;
  background:rgba(0,0,0,.75);
  width:100%;
  height:100%;
  z-index:20;
}


.message-right{
  position:fixed;
  right:0;
  top:0;
  width:80%;
  background:#fff;
  z-index:20;
  font-size:16px;
  height:100%;
}
.message{
  display: flex;
}
.message .goods-img{
  margin:10px;
}
.message .goods-img image{
  width:100px;
  height:100px;
  border:1px solid #333;
}
.message .goods-info{
  margin-top:10px;
  flex:1;
}
.message .num{
  margin:20px 0;
}
.message .goods-price{
  display: flex;
  width:100%
}
.message .goods-price .price{
  flex:1;
}
.message .goods-price .stock{
  margin:0;
  margin-right:10px;
}
.message-right .option{
  display: flex;
  padding:10px;
}
.message-right .total{
  flex:1;
}
.message-right button{
  height:24px;
  width:24px;
  line-height: 24px;
  text-align: center;
  margin-right:10px;
  padding-left:0;
  padding-right:0;
}

.nav{
  width:100%;
  height:40px;
  display:flex;
  flex-direction:row;
  border-top:1px solid #333;
